<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projectbugboard26.controller.LoginController"
            styleClass="login-root">
    <stylesheets>
        <URL value="@css/login.css"/>
    </stylesheets>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="transparent-scroll">
            <VBox alignment="CENTER" spacing="25" fx:id="loginContainer">
                <padding>
                    <Insets top="30" bottom="30" left="50" right="50"/>
                </padding>

                <!-- Logo -->
                <ImageView fx:id="logoImageView"
                           fitWidth="200"
                           preserveRatio="true"
                           styleClass="logo-image"/>

                <!-- Titolo -->
                <Label text="BugBoard" styleClass="title-label">
                    <font>
                        <Font name="System Bold" size="36"/>
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="18" fx:id="formBox"
                      fillWidth="true"
                      styleClass="form-box"
                      maxWidth="420">
                    <padding>
                        <Insets top="35" bottom="35" left="40" right="40"/>
                    </padding>
                    <fx:define>
                        <ToggleGroup fx:id="modeGroup"/>
                    </fx:define>

                    <!-- Label tipo utente -->
                    <Label fx:id="userTypeLabel"
                           text="ModalitÃ  Utente"
                           styleClass="user-label"/>

                    <!-- Campo Username -->
                    <VBox spacing="5">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField"
                                   promptText="Inserisci username"
                                   maxWidth="Infinity"/>
                    </VBox>

                    <!-- Campo Password -->
                    <VBox spacing="5">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Inserisci password"
                                       maxWidth="Infinity"/>
                    </VBox>

                    <Button fx:id="loginButton"
                            text="Accedi"
                            onAction="#handleLogin"
                            styleClass="login-button"
                            maxWidth="Infinity">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Button>
                    <HBox alignment="CENTER" spacing="10" fx:id="modeBox" maxWidth="Infinity">
                        <RadioButton fx:id="userRadio"
                                     text="Utente"
                                     toggleGroup="$modeGroup"
                                     selected="true"
                                     styleClass="mode-radio mode-user"/>
                        <RadioButton fx:id="adminRadio"
                                     text="Admin"
                                     toggleGroup="$modeGroup"
                                     styleClass="mode-radio mode-admin"/>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>


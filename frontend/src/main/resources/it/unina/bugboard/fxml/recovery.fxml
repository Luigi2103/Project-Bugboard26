<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unina.bugboard.recovery.RecoveryController"
            styleClass="login-root">
    <stylesheets>
        <URL value="@../css/login.css"/>
        <URL value="@../css/recovery.css"/>
    </stylesheets>

    <!-- Top Navigation -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
            <Button fx:id="pulsanteIndietro" 
                    text="â† Indietro" 
                    onAction="#tornaIndietro"
                    styleClass="back-button">
                <tooltip>
                    <Tooltip text="Esc"/>
                </tooltip>
            </Button>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="transparent-scroll" focusTraversable="false">
            <VBox alignment="CENTER" spacing="15" fx:id="contenitoreRecovery" focusTraversable="false">
                <padding>
                    <Insets top="20" bottom="20" left="40" right="40"/>
                </padding>

                <!-- Logo -->
                <ImageView fx:id="logoImmagine"
                           fitWidth="180"
                           preserveRatio="true"
                           styleClass="logo-image"/>

                <!-- Titolo -->
                <Label text="Recupero Password" styleClass="title-label" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

                <VBox alignment="CENTER" spacing="12" fx:id="boxForm"
                      fillWidth="true"
                      styleClass="form-box"
                      maxWidth="550">
                    <padding>
                        <Insets top="25" bottom="25" left="30" right="30"/>
                    </padding>

                    <!-- Campo Username -->
                    <VBox spacing="5">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="campoUsername"
                                   promptText="Inserisci username"
                                   maxWidth="Infinity"/>
                        <Label fx:id="erroreUsername"
                               text=" "
                               visible="false"
                               styleClass="error-label"/>
                    </VBox>

                    <!-- Campo Password Attuale -->
                    <VBox spacing="5">
                        <Label text="Nuova Password" styleClass="field-label"/>
                        <StackPane alignment="CENTER_RIGHT">
                            <TextField fx:id="campoPasswordVisibile" promptText="Nuova Password" visible="false" maxWidth="Infinity"/>
                            <PasswordField fx:id="campoPassword" promptText="Nuova Password" maxWidth="Infinity"/>
                            <Button fx:id="togglePassword" text="ðŸ‘" onAction="#togglePasswordVisibility" styleClass="icon-button">
                                <StackPane.margin>
                                    <Insets right="5"/>
                                </StackPane.margin>
                            </Button>
                        </StackPane>
                        <Label fx:id="errorePassword"
                               text=" "
                               visible="false"
                               styleClass="error-label"/>
                    </VBox>

                    <!-- Campo Nuova Password -->
                    <VBox spacing="5">
                        <Label text="Ripeti password" styleClass="field-label"/>
                        <StackPane alignment="CENTER_RIGHT">
                            <TextField fx:id="campoNuovaPasswordVisibile" promptText="Ripeti password" visible="false" maxWidth="Infinity"/>
                            <PasswordField fx:id="campoNuovaPassword" promptText="Ripeti password" maxWidth="Infinity"/>
                            <Button fx:id="toggleNuovaPassword" text="ðŸ‘" onAction="#toggleNuovaPasswordVisibility" styleClass="icon-button">
                                <StackPane.margin>
                                    <Insets right="5"/>
                                </StackPane.margin>
                            </Button>
                        </StackPane>
                        <Label fx:id="erroreNuovaPassword"
                               text=" "
                               visible="false"
                               styleClass="error-label"/>
                    </VBox>

                    <!-- Pulsanti Azione -->
                    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="pulsanteCancella"
                                text="Cancella Tutto"
                                onAction="#cancellaTutto"
                                styleClass="secondary-button"
                                maxWidth="Infinity"
                                HBox.hgrow="ALWAYS"/>
                        
                        <Button fx:id="pulsanteConferma"
                                text="Conferma"
                                onAction="#gestisciConferma"
                                styleClass="login-button"
                                maxWidth="Infinity"
                                HBox.hgrow="ALWAYS"/>
                    </HBox>

                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

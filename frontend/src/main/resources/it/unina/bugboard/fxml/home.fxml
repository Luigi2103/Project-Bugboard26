<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unina.bugboard.homepage.HomePageController"
            stylesheets="@../css/home.css">

    <!-- HEADER -->
    <top>
        <HBox styleClass="home-header" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="25" bottom="25" left="30" right="30"/>
            </padding>

            <VBox spacing="5">
                <HBox.hgrow>
                    <Priority fx:constant="ALWAYS"/>
                </HBox.hgrow>

                <Label fx:id="etichettaBenvenuto"
                       text="Ciao Utente"
                       styleClass="home-header__title"
                       wrapText="true" />
                <Label text="Ecco le tue attivitÃ  recenti"
                       styleClass="home-header__subtitle"
                       wrapText="true" />
            </VBox>

            <Button text="Logout"
                    onAction="#logout"
                    styleClass="btn-logout" />
        </HBox>
    </top>

    <!-- CENTRO -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER" styleClass="home-center">
            <padding>
                <Insets top="20" left="30" right="30" bottom="20"/>
            </padding>

            <!-- ACTION BAR -->
            <HBox spacing="20" alignment="CENTER" styleClass="actions-bar">
                <Button text="Segnala Issue"
                        onAction="#segnalaIssue"
                        styleClass="btn-secondary"/>

                <Button fx:id="btnAggiungiUtente"
                        text="Aggiungi Utente"
                        onAction="#vaiAInserimentoUtente"
                        styleClass="btn-primary"/>

                <Button text="Visualizza tutte"
                        onAction="#vediTutte"
                        styleClass="link-view-all"/>
            </HBox>

            <!-- TITLE -->
            <Label text="Issue Assegnate"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <!-- SCROLL -->
            <ScrollPane fitToWidth="true"
                        vbarPolicy="AS_NEEDED"
                        hbarPolicy="NEVER"
                        styleClass="transparent-scroll">

                <FlowPane fx:id="boxIssues"
                          hgap="20"
                          vgap="20"
                          alignment="TOP_LEFT"
                          prefWrapLength="700"
                          styleClass="issues-flow">
                    <padding>
                        <Insets top="10" bottom="20" left="10" right="10"/>
                    </padding>
                </FlowPane>

            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
